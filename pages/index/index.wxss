page,view{
  padding: 0;
  margin: 0;
}
.nav-tab{
  width: 730rpx;
  margin: 0 auto;
  text-align: center;
  color: #919BA5;
  font-size: 28rpx;
  margin-top: 28rpx;
  overflow: hidden;
}
.nav-tab view{
  width: 33.33%;
  float: left;
}
.nav-tab view.active{
  color: #222222;
  font-size: 32rpx;
  font-weight: bold;
}
.nav-tab view.active>text:nth-child(2){
  width: 80rpx;
  height: 4rpx;
  background: #FFD744;
  margin: 0 auto;
  display: block;
  margin-top: 14rpx;
}
.card-list{
  width: 100%;
  margin-top: 30rpx;
}
.card-list>view{
  width: 670rpx;
  height: 262rpx;
  background: #fff;
  box-shadow:0px 4rpx 14rpx 0px rgba(239,240,244,1);
  border-radius:30rpx;
  margin: 0 auto;
  margin-bottom: 40rpx;
}
.card-top{
  width: 100%;
  height: 168rpx;
  border-bottom: dashed 2rpx #EFF0F4;
  overflow: hidden;
}
.card-top>view:nth-child(1){
  line-height: 168rpx;
  color: #FF3F00;
  font-size: 70rpx;
  font-weight: bolder;
  margin-left: 40rpx;
  float: left;
}
.card-top>view:nth-child(1) text:nth-child(2){
  font-size: 28rpx;
  font-weight: normal;
  padding-left: 4rpx;
}
.card-top>view:nth-child(2){
  float: left;
  color: #919BA5;
  font-size: 24rpx;
  margin-left: 30rpx;
  margin-top: 40rpx;

}
.card-top>view:nth-child(2) text{
  display: block;
  margin-bottom: 4rpx;
}
.card-top>view:nth-child(2) text:nth-child(1){
  color: #222222;
  font-weight: bold;
    overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
    height: 34rpx;
    width: 330rpx;
    display: block;
}
.card-top>view:nth-child(3){
  float: right;
  margin-right: 40rpx;
  width: 48rpx;
  margin-top: 40rpx;
  padding-right: 32rpx;
  background: url('https://ylbb-wxapp.oss-cn-beijing.aliyuncs.com/activity/jt-c-icon.png') no-repeat center right;
  background-size: 12rpx 24rpx; 
}
.card-top>view:nth-child(3) image{
  width: 48rpx;
  height: 48rpx;
  float: left;
}
.card-bottom{
  width: 590rpx;
  height: 92rpx;
  line-height: 92rpx;
  margin: 0 auto;
  text-align: left;
  clear: both;
}
.card-bottom view{
  float: left;
  color: #919BA5;
  font-size: 22rpx;
  text-align: left;
} 
 .card-bottom>view:nth-child(2){
  float: right;
  color: #919BA5;
  font-size: 22rpx;
  padding-left: 46rpx;
  background: url('https://ylbb-wxapp.oss-cn-beijing.aliyuncs.com/activity/share-c-icon.png') no-repeat center left;
  background-size: 36rpx 36rpx; 
}
.card-list>view{
  position: relative;
  overflow: hidden;
}
.card-list>view>image{
  width: 162rpx;
  height: auto;
  position: absolute;
  bottom: 0;
  right: 12rpx;
}
.already .card-top>view:nth-child(1) {
  color: #919BA5;
}
.already .card-top>view:nth-child(2) text:nth-child(1){
    color: #919BA5;
}
.already .card-top>view:nth-child(3) image{
  opacity: 0.4;
}